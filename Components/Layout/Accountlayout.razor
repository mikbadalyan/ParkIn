@inherits LayoutComponentBase

<div class="main-layout">
    <header>
        <div class="logo">
            <a href="#">
                <img src="parkin_white.png" alt="Logo" />
            </a>
        </div>
        <div class="header-links">
            <a href="@GetAccountUrl()">Home</a> <!-- Updated link to include token -->
            <a href="/reserve">Reserve</a>
            <a href="/faq">FAQ</a>
            <div class="account-dropdown">
                <img src="avatar.jpg" alt="Account" class="account-image" />
                <div class="dropdown-content">
                    <a href="@GetAccountUrl()">
                        <img src="userk.png" alt="Account" class="dropdown-icon" /> Account
                    </a>
                    <a href="/settings">
                        <img src="settings.png" alt="Settings" class="dropdown-icon" /> Settings
                    </a>
                    <a href="/help">
                        <img src="help.png" alt="Help" class="dropdown-icon" /> Help
                    </a>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="signup-container">
            @Body
        </div>
    </main>
</div>

@code {
    [Parameter]
    public string? Token { get; set; }

    private string GetAccountUrl()
    {
        return $"/account/{Token}";
    }
}
