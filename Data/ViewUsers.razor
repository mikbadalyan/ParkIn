@page "/view-users"
@using Microsoft.EntityFrameworkCore
@using ParkIn.Data
@inject ApplicationDbContext DbContext

<PageTitle>View Users</PageTitle>

<h3>Registered Users</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else if (!users.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Phone Number</th>
                <th>PIN</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Username</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.PIN</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<YourEntity> users;

    protected override async Task OnInitializedAsync() => users = await DbContext.YourEntities.ToListAsync();
}
